<h2 class="text-center mb-5">カテゴリー作成</h2>

<%= form_with(model: @category, local: true) do |f| %>
  <%= render "devise/shared/error_messages", resource: @category %>

  <div class="mb-4">
    <%= f.label :name, "カテゴリー名", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "電気代、水道代、食費" %>
  </div>

  <div class="text-center">
    <%= f.submit "追加", class: "btn btn-outline-secondary" %>
  </div>
<% end %>
